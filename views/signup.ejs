<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CAD Marketplace | Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#1e293b",
              accent: "#6366f1",
            },
          },
        },
      };
    </script>
  </head>
  <body class="bg-gray-100 dark:bg-primary text-gray-800 dark:text-gray-100 min-h-screen flex items-center justify-center">
    <div class="absolute top-5 right-5">
      <button id="toggleTheme" class="p-2 rounded-full bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600">
        <svg id="iconTheme" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-black dark:text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path id="iconPath" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m8.66-8.66h-1M4.34 12H3m15.36 6.36l-.7-.7M6.34 6.34l-.7-.7m12.02 12.02l.7-.7M6.34 17.66l-.7.7M12 5a7 7 0 000 14a7 7 0 000-14z" />
        </svg>
      </button>
    </div>

    <div class="bg-white dark:bg-gray-800 shadow-2xl rounded-xl w-full max-w-lg p-10">
      <div class="flex flex-col items-center mb-6">
        <img src="https://avatars.githubusercontent.com/u/9919?s=200&v=4" alt="avatar" class="w-20 h-20 rounded-full mb-4" />
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Create an Account</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">Join the CAD Marketplace</p>
      </div>
      <form class="space-y-5">
        <div>
          <label for="name" class="block mb-1 text-sm font-medium">Full Name</label>
          <input type="text" id="name" class="w-full px-4 py-2 rounded-md border dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        </div>
        <div>
          <label for="email" class="block mb-1 text-sm font-medium">Email</label>
          <input type="email" id="email" class="w-full px-4 py-2 rounded-md border dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        </div>
        <div>
          <label for="password" class="block mb-1 text-sm font-medium">Password</label>
          <input type="password" id="password" class="w-full px-4 py-2 rounded-md border dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        </div>
        <div>
          <label for="confirmPassword" class="block mb-1 text-sm font-medium">Confirm Password</label>
          <input type="password" id="confirmPassword" class="w-full px-4 py-2 rounded-md border dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        </div>
        <button type="submit" class="w-full py-2 px-4 bg-accent text-white rounded-md hover:bg-indigo-600 transition duration-300">Sign Up</button>
      </form>
      <p class="mt-5 text-center text-sm text-gray-500 dark:text-gray-400">
        Already have an account? <a href="/login" class="text-accent hover:underline">Log in</a>
      </p>
    </div>

    <script>
      const toggleThemeBtn = document.getElementById("toggleTheme");
      const iconPath = document.getElementById("iconPath");

      toggleThemeBtn.addEventListener("click", () => {
        document.documentElement.classList.toggle("dark");
        const isDark = document.documentElement.classList.contains("dark");
        iconPath.setAttribute(
          "d",
          isDark
            ? "M12 3v1m0 16v1m8.66-8.66h-1M4.34 12H3m15.36 6.36l-.7-.7M6.34 6.34l-.7-.7m12.02 12.02l.7-.7M6.34 17.66l-.7.7M12 5a7 7 0 000 14a7 7 0 000-14z"
            : "M12 3v1m0 16v1m4.24-4.24l-.7-.7M6.46 6.46l-.7-.7m0 12.02l.7-.7M17.54 6.46l.7-.7M3 12h1m16 0h1M4.24 4.24l1.41 1.41M18.36 18.36l1.41 1.41"
        );
      });
    </script>
  </body>
</html>